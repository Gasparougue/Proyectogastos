 <!DOCTYPE html>
 <html>
  <head>
    <title>Actualizaci칩n de usuario</title>
    <meta charset="utf-8">
    <style>
      body {
        background-image: url('ruta/a/la/imagen.jpg');
        background-size: cover;
        background-position: center;
        background-attachment: fixed;
        font-family: Arial, sans-serif;
        font-size: 16px;
        color: #333;
        margin: 0;
        padding: 0;
      }
      
      h1 {
        text-align: center;
        margin: 50px 0;
        padding: 20px;
        background-color: black;
        color: white;
      }
      
      form {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        margin: 50px auto;
        max-width: 500px;
      }
      
      label {
        display: block;
        margin-bottom: 10px;
      }
      
      input[type="text"], textarea {
        width: 100%;
        padding: 10px;
        margin-bottom: 20px;
        border: 1px solid #ccc;
        border-radius: 5px;
        box-sizing: border-box;
        font-size: 16px;
      }
      
      textarea {
        height: 150px;
      }
      
      input[type="submit"] {
        background-color: #f44336;
        color: white;
        border: none;
        padding: 10px 20px;
        font-size: 16px;
        cursor: pointer;
        border-radius: 5px;
        transition: background-color 0.3s ease-in-out;
      }
      
      input[type="submit"]:hover {
        background-color: #d32f2f;
      }
    </style>
  </head>
 <form id="update-form" action="/actualizar/<%=usuario.ID%>" method="post">
      <label for="name">Nombre:</label>
      <input type="text" id="nombre" name="nombre" required>
  
      <label for="email">Precio:</label>
      <input type="number" id="precio" name="precio" required>
  
      <label for="fecha">Fecha:</label>
      <input type="text" id="fecha" name="fecha" required>
  
      <input type="submit" value="Enviar">
    </form>
  <script type="text/javascript">


const ID ='<%=usuario.ID%>'; 


fetch(`/actualizar/${ID}`, {
  method: 'GET'
})
  .then(response => {
    if (response.ok) {
      return response.text();
    } else {
      throw new Error('Error al obtener el usuario');
    }
  })
  .then(html => {
    // Renderizar la vista de actualizaci칩n con los datos obtenidos
    document.getElementById('update-form').innerHTML = html;
  })
  .catch(error => {
    console.error(error);
    // Mostrar mensaje de error en caso de fallo
    document.getElementById('update-form').innerHTML = 'Error al obtener el usuario';
  });

// Actualizar datos del cliente
const updateForm = document.getElementById('update-form');
updateForm.addEventListener('submit', (event) => {
  event.preventDefault();

  const formData = new FormData(updateForm);
  const nombre = formData.get('nombre');
  const precio = formData.get('precio');
  const fecha = formData.get('fecha');

  const data = {
    nombre,
    precio,
    fecha
  };

  fetch(`/actualizar/${ID}`, {
    method: 'POST',
    headers: {
      'Content-Type': 'application/json'
    },
    body: JSON.stringify(data)
  })
    .then(response => {
      if (response.ok) {
        // El cliente se actualiz칩 correctamente
        console.log('Cliente actualizado correctamente');
        // Redirigir a la p치gina principal
        window.location.href = '/';
      } else {
        throw new Error('Error al actualizar el cliente');
      }
    })
    .catch(error => {
      console.error(error);
      // Mostrar mensaje de error en caso de fallo
      document.getElementById('update-form').innerHTML = 'Error al actualizar el usuario';
    });
});

  </script>
</html>